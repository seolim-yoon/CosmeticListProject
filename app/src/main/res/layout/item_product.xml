<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="product"
            type="com.example.cosmeticlistproject.data.Product" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipe_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_product_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            app:imageUrl="@{product.imageUrl}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_product_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@{product.productRank}"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/iv_product_img"
            app:layout_constraintLeft_toRightOf="@id/iv_product_img"/>

        <TextView
            android:id="@+id/tv_brand_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@{product.brand.brandTitle}"
            android:textColor="@color/gray"
            android:textSize="15sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/tv_product_rank"
            app:layout_constraintLeft_toRightOf="@id/tv_product_rank"
            app:layout_constraintBottom_toBottomOf="@id/tv_product_rank"/>

        <TextView
            android:id="@+id/tv_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{product.productTitle}"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_brand_title"
            app:layout_constraintStart_toStartOf="@id/tv_brand_title" />

        <ImageView
            android:id="@+id/iv_product_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_star"
            app:layout_constraintStart_toStartOf="@id/tv_brand_title"
            app:layout_constraintTop_toBottomOf="@id/tv_brand_title"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_img"/>

        <TextView
            android:id="@+id/tv_product_rating_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{product.ratingAvg}"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@id/iv_product_rating"
            app:layout_constraintLeft_toRightOf="@id/iv_product_rating"
            app:layout_constraintBottom_toBottomOf="@id/iv_product_rating"/>

        <TextView
            android:id="@+id/tv_product_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setReview="@{product.reviewCount}"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@id/tv_product_rating_avg"
            app:layout_constraintTop_toTopOf="@id/tv_product_rating_avg"
            app:layout_constraintBottom_toBottomOf="@id/tv_product_rating_avg"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>