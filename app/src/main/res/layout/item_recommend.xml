<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="recommend"
            type="com.example.cosmeticlistproject.ui.model.RecommendModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/iv_recommend_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="7dp"
            imageUrl="@{recommend.imageUrl}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_recommend_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{recommend.productTitle}"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/iv_recommend_img"
            app:layout_constraintStart_toStartOf="@id/iv_recommend_img"
            app:layout_constraintEnd_toEndOf="@id/iv_recommend_img"/>

        <ImageView
            android:id="@+id/iv_recommend_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_star"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/iv_recommend_img"
            app:layout_constraintTop_toBottomOf="@id/tv_recommend_title"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_recommend_rating_avg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Double.toString(recommend.ratingAvg)}"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@id/iv_recommend_rating"
            app:layout_constraintLeft_toRightOf="@id/iv_recommend_rating"
            app:layout_constraintBottom_toBottomOf="@id/iv_recommend_rating"/>

        <TextView
            android:id="@+id/tv_recommend_review_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setReview="@{recommend.reviewCount}"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            app:layout_constraintLeft_toRightOf="@id/tv_recommend_rating_avg"
            app:layout_constraintTop_toTopOf="@id/tv_recommend_rating_avg"
            app:layout_constraintBottom_toBottomOf="@id/tv_recommend_rating_avg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
